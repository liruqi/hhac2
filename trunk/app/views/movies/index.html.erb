<h1>Listing movies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Tags</th>
    <th>Info</th>
    <th>Path</th>
    <th>User</th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%=h movie.title %></td>
    <td><%=h movie.tags %></td>
    <td><%=h movie.info %></td>
    <td><%=h movie.path %></td>
    <td><%=h movie.user.uname %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

