<h1>Listing movies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Tags</th>
    <th>Info</th>
    <th>User</th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= link_to movie.title, movie %></td>
    <td><%=h movie.tags %></td>
    <td><%=h movie.info %></td>
    <td><%=h movie.user.uname %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if current_user %>
<%= link_to 'Upload New Movie', :action => :upload, :id => 1 %>
<% end %>
